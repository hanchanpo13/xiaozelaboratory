<resources>

    <declare-styleable name="XZIconFontView">
        <!--颜色选择器-->
        <attr name="defaultColor" format="reference|color"/>
        <!--icon属性-->
        <attr name="iconCode" format="string" localization="suggested"/>
        <attr name="iconColor" format="reference|color"/>
        <attr name="iconSize" format="dimension"/>
        <attr name="iconBold">
            <flag name="no" value="0"/>
            <flag name="yes" value="1"/>
        </attr>
        <attr name="textPadding" format="dimension"/>

        <!--文字属性-->
        <attr name="font_Text" format="string"/>
        <attr name="font_TextColor" format="reference|color"/>
        <attr name="font_TextSize" format="dimension"/>
        <attr name="font_TextStyle">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
            <flag name="bold_italic" value="3"/>
        </attr>
        
        <attr name="text_Orientation">
            <flag name="left" value="0"/>
            <flag name="top" value="1"/>
            <flag name="right" value="2"/>
            <flag name="bottom" value="3"/>
        </attr>
        
        <attr name="icon_rotation">
            <flag name="rotation_0" value="0"/>
            <flag name="rotation_90" value="90"/>
            <flag name="rotation_180" value="180"/>
            <flag name="rotation_-90" value="270"/>
        </attr>
    </declare-styleable>

    <item name="tv_id" type="id" />

</resources>