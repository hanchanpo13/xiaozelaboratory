<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/yuanjiao_white_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/uptate_download_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        tools:text="版本升级"
        android:textColor="@color/xz_212121"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/uptate_download_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        tools:text="软件正在下载，请稍候"
        android:textColor="@color/xz_212121"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/uptate_download_pgb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/update_progressbar_bg"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/update_download_pgbtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/xz_ff4081"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="25dp"
        android:background="@color/xz_e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/uptate_download_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_ffffff_f0f0f0_circle"
            android:gravity="center"
            android:text=""
            android:textColor="@color/xz_212121"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/xz_e0e0e0" />

        <TextView
            android:id="@+id/uptate_download_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_ffffff_f0f0f0_circle"
            android:gravity="center"
            android:text=""
            android:textColor="@color/xz_212121"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>